<?xml version="1.0" encoding="UTF-8"?>
<project name="module_vomm" default="compile.module.vomm">
  <dirname property="module.vomm.basedir" file="${ant.file.module_vomm}"/>
  
  <property name="module.jdk.home.vomm" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.vomm" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.vomm" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.vomm" value="-encoding UTF-8 -source 10 -target 10 ${compiler.args}"/>
  
  <property name="vomm.output.dir" value="${module.vomm.basedir}/out/production/Vomm"/>
  <property name="vomm.testoutput.dir" value="${module.vomm.basedir}/out/test/Vomm"/>
  
  <path id="vomm.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="vomm.module.production.classpath">
    <path refid="${module.jdk.classpath.vomm}"/>
  </path>
  
  <path id="vomm.runtime.production.module.classpath">
    <pathelement location="${vomm.output.dir}"/>
  </path>
  
  <path id="vomm.module.classpath">
    <path refid="${module.jdk.classpath.vomm}"/>
    <pathelement location="${vomm.output.dir}"/>
  </path>
  
  <path id="vomm.runtime.module.classpath">
    <pathelement location="${vomm.testoutput.dir}"/>
    <pathelement location="${vomm.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.vomm">
    <patternset refid="ignored.files"/>
    <exclude name="out/**"/>
    <exclude name="out/production/**"/>
    <exclude name="out/production/Vomm/**"/>
    <exclude name="out/production/Vomm/.vs/**"/>
    <exclude name="out/production/Vomm/.vs/Vomm/**"/>
    <exclude name="out/production/Vomm/.vs/Vomm/v15/**"/>
    <exclude name="out/production/Vomm/src/**"/>
    <exclude name="out/production/Vomm/src/assets/**"/>
    <exclude name="out/production/Vomm/src/META-INF/**"/>
    <exclude name="out/production/Vomm/.idea/**"/>
    <exclude name="out/production/Vomm/.settings/**"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.vomm">
    <patternset refid="excluded.from.module.vomm"/>
  </patternset>
  
  <path id="vomm.module.sourcepath">
    <dirset dir="${module.vomm.basedir}/../../Desktop">
      <include name="Vomm"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.vomm" depends="compile.module.vomm.production,compile.module.vomm.tests" description="Compile module Vomm"/>
  
  <target name="compile.module.vomm.production" depends="register.custom.compilers" description="Compile module Vomm; production classes">
    <mkdir dir="${vomm.output.dir}"/>
    <javac2 destdir="${vomm.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.vomm}/javac">
      <compilerarg line="${compiler.args.vomm}"/>
      <bootclasspath refid="vomm.module.bootclasspath"/>
      <classpath refid="vomm.module.production.classpath"/>
      <src refid="vomm.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.vomm"/>
    </javac2>
    
    <copy todir="${vomm.output.dir}">
      <fileset dir="${module.vomm.basedir}">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.vomm.tests" depends="register.custom.compilers,compile.module.vomm.production" description="compile module Vomm; test classes" unless="skip.tests"/>
  
  <target name="clean.module.vomm" description="cleanup module">
    <delete dir="${vomm.output.dir}"/>
    <delete dir="${vomm.testoutput.dir}"/>
  </target>
</project>